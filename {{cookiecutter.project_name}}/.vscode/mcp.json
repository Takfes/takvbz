{
  "servers": {
    "time": {
      "command": "mcp-server-time"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "{{cookiecutter.project_name}}"
      ]
    },
    "dbhub-pg": {
      "type": "http",
      "url": "http://localhost:8081/message"
    },
    "dbhub-mysql": {
      "type": "http",
      "url": "http://localhost:8082/message"
    },
    "sequentialthinking": {
      "command": "npx",
      "args": ["-y", "sequential-thinking-server"]
    },
    "git": {
      "command": "npx",
      "args": ["-y", "mcp-server-git", "--repository", "."]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "mcp-server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "braveSearch": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        // "BRAVE_API_KEY": "${input:brave_api_key}"
        "BRAVE_API_KEY": "${env:BRAVE_API_KEY}"
      }
    }
  },
  "inputs": [
    {
      "id": "brave_api_key",
      "type": "promptString",
      "description": "Brave API key (optional, required for brave-search server)",
      "password": true
    },
    {
      "id": "github_pat",
      "type": "promptString",
      "description": "GitHub Personal Access Token (optional, required for github server)",
      "password": true
    }
  ]
}
